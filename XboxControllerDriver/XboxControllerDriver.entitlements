<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <!-- Necessário para drivers DriverKit -->
    <key>com.apple.developer.driverkit</key>
    <true/>

    <!-- Permite publicar UserClients -->
    <key>com.apple.developer.driverkit.userclient-access</key>
    <array>
        <string>*</string>
    </array>

    <!-- Permite ACESSO a USB Host/Interface/Pipes -->
    <key>com.apple.developer.driverkit.transport.usb</key>
    <true/>

    <!-- Permite expor HID ao sistema -->
    <key>com.apple.developer.driverkit.transport.hid</key>
    <true/>

    <!-- Necessário para ser carregado como System Extension -->
    <key>com.apple.developer.system-extension.install</key>
    <true/>

    <!-- Permitir substituições de drivers existentes -->
    <key>com.apple.developer.driverkit.family.hid.device</key>
    <true/>

    <!-- Evita restrições de acesso ao hardware USB -->
    <key>com.apple.developer.driverkit.family.usb</key>
    <true/>

    <!-- Opcional — liberar acesso a toda a pilha -->
    <key>com.apple.developer.driverkit.allow-any-userclient</key>
    <true/>

    <!-- Opcional — debug -->
    <key>com.apple.developer.driverkit.debug</key>
    <true/>

</dict>
</plist>
